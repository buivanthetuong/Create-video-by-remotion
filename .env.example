# ==========================================
# VIDEO AUTO-CREATE PROJECT - ENVIRONMENT VARIABLES
# ==========================================
# Copy this file to .env and update with your values
# ==========================================

# ==========================================
# PROJECT CONFIGURATION
# ==========================================

# Project/Composition name (must match folder in src/rootComponents/)
PROJECT_NAME=CSK001

# Render output folder name
RENDER_FOLDER=CSK_001

# Video name prefix for output files
VIDEO_NAME=CSK001

# ==========================================
# VIDEO SETTINGS
# ==========================================

# Video dimensions
VIDEO_WIDTH=1080
VIDEO_HEIGHT=1920

# Video quality settings
VIDEO_FPS=30
VIDEO_CODEC=h264
VIDEO_CRF=18
# CRF Values:
# - 15-18: High quality (larger files)
# - 19-23: Medium quality
# - 24-28: Lower quality (smaller files)

VIDEO_QUALITY=high
# Options: low, medium, high, ultra

# Pixel format
VIDEO_PIXEL_FORMAT=yuv420p

# ==========================================
# RENDER SETTINGS
# ==========================================

# Enable video rendering
ENABLE_VIDEO=true

# Enable still image rendering
ENABLE_STILL=false

# Still image format (png, jpeg, jpg)
STILL_FORMAT=png

# Still image quality (1-100, only for jpeg)
STILL_QUALITY=95

# Frame to capture for still (0 = first frame)
STILL_FRAME=0

# Overwrite existing files
OVERWRITE_EXISTING=false

# Show detailed render progress
SHOW_DETAILED_PROGRESS=true

# ==========================================
# METADATA SETTINGS
# ==========================================

# Include metadata in videos
INCLUDE_METADATA=true

# Video metadata artist/creator name
VIDEO_ARTIST=Review Vụ Án

# Video metadata hashtags (comma-separated)
VIDEO_HASHTAGS=#ReviewVuAn,#TinNongPhapLuat,#PhapLuatVietNam

# Title template (use {id}, {hook})
VIDEO_TITLE_TEMPLATE=Review Vụ Án - ID{id}

# Description template (use {hook}, {hashtags}, {id})
VIDEO_DESCRIPTION_TEMPLATE=Hook: {hook} | Hashtags: {hashtags}

# Comment template (use {hook}, {id})
VIDEO_COMMENT_TEMPLATE={hook}

# ==========================================
# PERFORMANCE SETTINGS
# ==========================================

# Remotion concurrency (1-8)
# Lower values use less RAM but slower
REMOTION_CONCURRENCY=1

# Chromium OpenGL renderer
# Options: angle, egl, swiftshader
CHROMIUM_RENDERER=egl

# Max buffer size for commands (bytes)
MAX_BUFFER=52428800

# ==========================================
# PATHS (Leave empty to use defaults)
# ==========================================

# Custom output directory for videos
# OUTPUT_DIR=./renders/videos

# Custom output directory for stills
# STILL_OUTPUT_DIR=./renders/stills

# Custom public assets directory
# PUBLIC_DIR=./public

# ==========================================
# DEVELOPMENT SETTINGS
# ==========================================

# Enable debug logging
DEBUG=false

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# ==========================================
# NOTES
# ==========================================
# - Do NOT commit .env file to version control
# - Keep this .env.example file updated when adding new variables
# - Boolean values: true/false (lowercase)
# - Numeric values: no quotes needed
# - String values: quotes optional but recommended for values with spaces
